<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TextViewModule" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_extra_light_gray</item>
        <item name="colorSecondaryVariant">@color/secondary_light_gray</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:fitsSystemWindows">true</item>

        <!--StatusBar-->
        <!--Change StatusBar Color-->
        <item name="android:statusBarColor">@color/white</item>
        <!--Show Content Inverted Color-->
        <item name="android:windowLightStatusBar">true</item>
        <!--Transparent StatusBar-->
        <item name="android:windowTranslucentStatus">false</item>
        <!--StatusBar-->

        <!--NavigationBar-->
        <!--Change BottomNavigationBar Color-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <!--Transparent BottomNavigationBar-->
        <item name="android:windowTranslucentNavigation">false</item>
        <!--NavigationBar-->

        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>

        <!--Dark Theme Status-->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowBackground">@color/white</item>
        <!--Dark Theme Status-->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenBackground">@color/white</item>

        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <item name="windowSplashScreenAnimationDuration">10</item>
        <item name="android:windowSplashScreenAnimationDuration">10</item>

        <item name="postSplashScreenTheme">@style/Theme.TextViewModule</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_extra_light_gray</item>
        <item name="colorSecondaryVariant">@color/secondary_light_gray</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>

        <item name="android:fitsSystemWindows">true</item>

        <!--StatusBar-->
        <!--Change StatusBar Color-->
        <item name="android:statusBarColor">@color/white</item>
        <!--Show Content Inverted Color-->
        <item name="android:windowLightStatusBar">true</item>
        <!--Transparent StatusBar-->
        <item name="android:windowTranslucentStatus">false</item>
        <!--StatusBar-->

        <!--NavigationBar-->
        <!--Change BottomNavigationBar Color-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <!--Transparent BottomNavigationBar-->
        <item name="android:windowTranslucentNavigation">false</item>
        <!--NavigationBar-->

        <!--Dark Theme Status-->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowBackground">@color/white</item>
        <!--Dark Theme Status-->
    </style>

    <style name="myEditText" parent="Theme.TextViewModule">
        <item name="android:colorControlActivated">@color/black</item>
        <item name="android:colorControlNormal">@color/light_gray</item>
    </style>

    <style name="CustomTextAppearanceTabUser" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/light_gray</item>
        <item name="android:progressTint">@color/black</item>
        <item name="android:colorControlActivated">@color/light_gray</item>
    </style>

    <style name="Theme.Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="TransparentDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="CustomTextAppearanceTabUser1" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
</resources>